{
  "compilerOptions": {
    "incremental": true,
    "lib": ["es6", "es2017.object"],
    "allowJs": false,
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "pretty": true,
    "noEmitOnError": true,
    "newLine": "lf",
    "inlineSources": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "test", "dist"]
}
